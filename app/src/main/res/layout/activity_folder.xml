<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/backgroundnew3"
    tools:context=".activities.FolderActivity"
    android:theme="@style/AppTheme">


    <android.support.v7.widget.Toolbar
        android:id="@+id/folder_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="@color/colorPrimaryVivid"
        app:titleTextColor="@color/colorWhite"
        app:popupTheme="@style/ThemeOverlay.AppCompat"
        android:elevation="4dp"
        />




    <TextView
        android:id="@+id/folder_name_txt"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="From:   "
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/folder_message_subject"
        android:layout_width="fill_parent"
        android:layout_marginStart="5dp"
        android:layout_height="40dp"
        android:text="Subject:   "
        />
    <TextView
        android:id="@+id/folder_message"
        android:layout_width="fill_parent"
        android:layout_marginStart="5dp"
        android:layout_height="40dp"
        />

    <TextView
        android:id="@+id/folder_name_txt2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:text="From:   "
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/folder_message_subject2"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:text="Subject:   "
        />
    <TextView
        android:id="@+id/folder_message2"
        android:layout_width="fill_parent"
        android:layout_marginStart="5dp"
        android:layout_height="40dp"
        android:layout_marginEnd="5dp"
        />




</LinearLayout>